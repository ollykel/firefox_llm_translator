{
	"manifest_version": 3,
  "name": "LLM Autotranslate",
  "version": "0.1",
  "description": "Automatically translate the content of web pages using the API of an LLM such as ChatGPT.",

  "host_permissions": [
    "*://api.openai.com/*"
  ],

  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "webRequest"
  ],

  "action": {
    "default_title": "LLM Autotranslate",
    "default_popup": "popup/translate.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts/translate.js"]
    }
  ]
}
